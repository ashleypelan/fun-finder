extends layout

block content
  .fav-content
    h1 Fun Finder
    .container
      .login-create
        if user
          p Hello, #{user.username}
          p
          a(href="/logout") Logout
    .container
      .fav.columns-8
        h2 Username's Saved Events
        
        each event in profile
          .fav-row
            .columns-2
              p=event.category
              //- p=event.time
            .columns-10
              h4 
                  p=event.title
              p.start-time When: #{event.time}
                
                br
                | Where: #{event.address}
                
                .remove-event
                  form(action="/remove/" + event._id, method="post")
                    button#delete(type="submit") Remove Event
              
      .fav.columns-4
          p.num-favs You have #{profile.length} saved events in Denver Fun Finder.
          button(id='save-fav') 
            a(href='/') Find More Events
          
                   
          
          
          
