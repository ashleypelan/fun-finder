extends layout

block content  
  .fav-content
    h1 Fun Finder
    .container
      .login-create
        if user
          p Hello, #{user}
          p
          a(href="/logout") Logout
    
    .fav.columns-8
      h2 #{user}'s Saved Events
      
      each event in profile
        .fav-row
          .columns-2
            p=event.category
          .columns-10
            h4 
              p=event.title
              
            p.start-time#seventy-five When: #{event.time}
              
              br
              | Where: #{event.address}
              br
              a(href='') Event Link
              .remove-event#twenty-five
                form(action="/remove/" + event._id, method="post")
                  button#delete(type="submit") Remove Event
            
    .fav.columns-4
      p.num-favs You have #{profile.length} saved events in Denver Fun Finder.
      
      a(href='/') 
        button(id='save-fav') Find More Events
                   
          
          
          
